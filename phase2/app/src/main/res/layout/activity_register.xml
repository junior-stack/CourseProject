<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorPrimary"
  android:gravity="center_horizontal"
  tools:context=".RegisterActivity"
  tools:ignore="HardcodedText">

  <Button
    android:id="@+id/button_register"
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/radio_group_1"
    android:layout_marginHorizontal="20dp"
    android:background="@color/colorPrimary2"
    android:fontFamily="@font/poppins_regular"
    android:text="Register"
    android:textAllCaps="false"
    android:textSize="20sp" />

  <Button
    android:id="@+id/button_back"
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/button_register"
    android:layout_marginHorizontal="20dp"
    android:background="@color/colorPrimary2"
    android:fontFamily="@font/poppins_regular"
    android:text="Back"
    android:textAllCaps="false"
    android:textSize="20sp" />

  <EditText
    android:id="@+id/phone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_below="@id/password"
    android:layout_marginHorizontal="20dp"
    android:focusable="true"
    android:fontFamily="@font/poppins_regular"
    android:hint="Phone"
    android:inputType="phone"
    android:textColorHighlight="#FFFFFF" />

  <EditText
    android:id="@+id/name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_below="@id/phone"
    android:layout_marginHorizontal="20dp"
    android:focusable="true"
    android:fontFamily="@font/poppins_regular"
    android:hint="Full Name"
    android:inputType="textPersonName"
    android:textColorHighlight="#FFFFFF" />

  <EditText
    android:id="@+id/email"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_below="@id/smallText"
    android:layout_marginHorizontal="20dp"
    android:focusable="true"

    android:fontFamily="@font/poppins_regular"
    android:hint="Email"
    android:inputType="textEmailAddress"
    android:textColorHighlight="#FFFFFF" />

  <EditText
    android:id="@+id/password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_below="@id/email"
    android:layout_marginHorizontal="20dp"
    android:focusable="true"
    android:fontFamily="@font/poppins_regular"
    android:hint="Password"
    android:inputType="textPassword"
    android:textColorHighlight="#FFFFFF" />

  <RadioGroup
    android:id="@+id/radio_group_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_below="@id/name"
    android:layout_centerHorizontal="true"
    android:layout_marginHorizontal="20dp"
    android:orientation="horizontal">

    <RadioButton
      android:id="@+id/radio_attendee"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/poppins_regular"
      android:hint="Register as Attendee"
      android:textColorHighlight="#FFFFFF" />

    <RadioButton
      android:id="@+id/radio_organizer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:fontFamily="@font/poppins_regular"
      android:hint="Register as Organizer"
      android:textColorHighlight="#FFFFFF" />
  </RadioGroup>

  <TextView
    android:id="@+id/smallText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/logoText"
    android:layout_centerHorizontal="true"

    android:fontFamily="@font/poppins_regular"
    android:text="Register Menu"
    android:textColor="#FFFFFF"
    android:textSize="15sp" />

  <TextView
    android:id="@+id/logoText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:layout_alignParentTop="true"

    android:layout_centerHorizontal="true"
    android:fontFamily="@font/poppins_semibold"
    android:text="iConference"
    android:textColor="@color/colorPrimary2"
    android:textSize="30sp" />
</RelativeLayout>